generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

// clasical User model with mail, (raw) password and id
model User {
  id       String @id @default(uuid())
  mail     String @unique
  password String
}

model Data {
  id       String @id @default(uuid())
  runId    String
  topic    String
  endoAvg  Float
  endoSd   Float
  heartAvg Float
  heartSd  Float
  time     BigInt
}
